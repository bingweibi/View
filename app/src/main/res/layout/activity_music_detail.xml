<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bibingwei.MusicDetail">

    <ImageView
        android:id="@+id/musicDetailPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backMusicFragment"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/back"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/musicName"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="5dp"
                    android:text="musicName" />

                <TextView
                    android:id="@+id/musicAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginBottom="0dp"
                    android:text="musicAuthor" />
            </LinearLayout>
        </LinearLayout>

        <me.zhengken.lyricview.LyricView
            android:id="@+id/musicWord"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <TextView
                android:id="@+id/nowTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00:23"
                android:textSize="12sp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:max="100"
                android:progress="5"
                style="@android:style/Widget.ProgressBar.Horizontal" />

            <TextView
                android:id="@+id/totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="04:23"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/previousMusic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_skip_previous"/>

            <com.freedom.lauzy.playpauseviewlib.PlayPauseView
                android:id="@+id/play_pause_view"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                app:anim_direction="positive"
                app:anim_duration="300"
                app:bg_color="#E0E0E0"
                app:btn_color="#000000"
                app:gap_width="25" />

            <ImageView
                android:id="@+id/nextMusic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_skip_next" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
